<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- The definition of the Root Spring Container shared by all Servlets and Filters -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/root-context.xml</param-value>
	</context-param>
	
	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Processes application requests -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
		
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/userRegist</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/userCheck</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/login</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getDepartmentList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/departmentAdd</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/departmentUpdate</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/requestReceipt</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getReceiptList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/rejectReceipt</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/changeSubmissionStatus</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/userPasswordFind</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/userPasswordUpdate</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/userInfoUpdate</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getBankList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/departmentRequest</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getLoginUserDepartmentPositionList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getRequestPositilityDepartmentList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getDepartmentRequestList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/departmentRequestFinish</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getDepartmentMemberList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/departmentLeave</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getDepartmentPositionList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/positionRequest</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getRequestPossibilityDepartmentPositionList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getPositionRequestList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/positionRequestFinish</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/positionLeave</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getBudgetTypeList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/budgetTypeAdd</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getBudgetYearList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/setBudgetYearAmount</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/positionAdd</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/getPositionList</url-pattern>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/positionUpdate</url-pattern>
		
	</servlet-mapping>

</web-app>
